package gui

import (
	"fyne.io/fyne/v2"
	"fyne.io/fyne/v2/container"
	"fyne.io/fyne/v2/widget"
)

func (ui *UI) initUiTagging() *fyne.Container {
	tags := []string{
		"TAG-NAME",
		"artist", "album", "albartist",
		"cdnum", "tracknum", "year",
		"title", "genre", "comment",
	}
	tblTagging := widget.NewTable(
		func() (int, int) {
			return len(tags), 2
		},
		func() fyne.CanvasObject {
			return widget.NewEntry()
		},
		func(id widget.TableCellID, o fyne.CanvasObject) {
			switch id.Col {
			case 0:
				o.(*widget.Entry).Text = (tags[id.Row])
			case 1:
				o.(*widget.Entry).Text = ("...othing yet...")
			}
		},
	)
	return container.NewBorder(nil, nil, nil, nil,
		tblTagging,
	)
}
